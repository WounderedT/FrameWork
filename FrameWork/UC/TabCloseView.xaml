<UserControl x:Class="FrameWork.UC.TabCloseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FrameWork.UC"
             mc:Ignorable="d" >
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="21"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="auto"
               FontFamily="Copperplate Gothic Light" 
               x:Name="labelTabName" 
               Content="{Binding LabelContent}" Background="LightBlue" />
        <!--Background="{Binding LabelBackground}" />-->
        <Button Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Height="26" Width="20"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" FontStretch="Normal" FontSize="14" ToolTip="Close"
                FontFamily="Copperplate Gothic Light" FontWeight="Bold" Background="Transparent"
                x:Name="buttonTabClose" 
                Content="X" Command="{Binding CloseButtonClick}"
                Visibility="{Binding ButtonCloseVisibility}"  />
    </Grid>
</UserControl>
